<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="qwer.BlankFragmentc4">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/white" />

    <android.support.v7.widget.Toolbar
        android:background="#323d4d"
        android:id="@+id/toolbar"
        android:minHeight="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:text="運動方案"
        android:textColor="#73c4d9"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/seleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/SportListSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/seleSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="選擇此運動" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/SportTargetLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/SportItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="運動項目" />

            <ProgressBar
                android:id="@+id/SportProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/SportProgressNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目前運動進度：0/100" />

            <Button
                android:id="@+id/DoTheSport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="做了一單位的運動-->" />
            <ImageView
                android:id="@+id/SportFinishIMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/sportfinish"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/TodayFoodKKL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今日的飲食：" />

            <TextView
                android:id="@+id/tdBK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="早餐：尚未紀錄" />

            <TextView
                android:id="@+id/tdLH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="午餐：尚未記錄" />

            <TextView
                android:id="@+id/tdDN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="晚餐：尚未紀錄" />

            <TextView
                android:id="@+id/tdKLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="今日累計熱量：0" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButtona1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/qwerz" />

        <ImageButton
            android:id="@+id/imageButtona2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/qwerx" />

        <ImageButton
            android:id="@+id/imageButtona3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/qwerc" />

        <ImageButton
            android:id="@+id/imageButtona4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/qwerv" />

    </LinearLayout>

</RelativeLayout>
