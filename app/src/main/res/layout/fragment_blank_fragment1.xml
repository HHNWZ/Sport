<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:clickable="true"
    tools:context="qwer.BlankFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        app:srcCompat="@android:color/white" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="98dp"
        android:layout_marginTop="26dp"
        android:layout_weight="1"
        android:text="常見食物熱量"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="83dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="119dp"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textView3"
                android:background="@drawable/blue"
                android:text="麵"

                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_toStartOf="@+id/textView3"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="白飯"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button2"
                android:layout_alignBottom="@+id/button2"
                android:layout_toEndOf="@+id/textView3"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="牛奶"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button"
                android:layout_below="@+id/button"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="水餃"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button4"
                android:layout_alignBottom="@+id/button4"
                android:layout_alignStart="@+id/button2"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="方便麵"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button10"
                android:layout_alignBottom="@+id/button10"
                android:layout_alignParentEnd="true"

                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="蘋果"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button4"
                android:layout_below="@+id/button4"

                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="西瓜"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button12"
                android:layout_alignBottom="@+id/button12"
                android:layout_alignStart="@+id/button10"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="芒果"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button13"
                android:layout_alignBottom="@+id/button13"
                android:layout_alignStart="@+id/button11"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="香蕉"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/button12"
                android:layout_below="@+id/button12"

                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="荷包蛋"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button15"
                android:layout_alignBottom="@+id/button15"
                android:layout_alignStart="@+id/button13"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="啤酒"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/button16"
                android:layout_alignBottom="@+id/button16"
                android:layout_alignStart="@+id/button14"
                android:layout_weight="1"
                android:background="@drawable/blue"
                android:text="肉"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
