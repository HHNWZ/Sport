<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="necowneco.tablayout.theArt">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/theTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【類別】貼文標題"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/theClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="運動類別"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/theAut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="貼文作者"
                    android:textColor="#000000"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0001" />

            <Button
                android:id="@+id/koreIINe"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="讚" />

            <Button
                android:id="@+id/toRes"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="留言" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="貼文內容："
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/theCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加載內容中"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/theIMG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/theCon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/sheng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BackTolist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="回到貼文列表" />

            <Button
                android:id="@+id/DelebBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshape"
                android:text="變更貼文"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

</FrameLayout>
