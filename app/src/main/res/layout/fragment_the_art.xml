<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="necowneco.tablayout.theArt">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/BackTolist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="回到貼文列表" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/theTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="貼文標題"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/myGoodnum"
                android:layout_weight="1"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/DelebBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="刪除此貼文"
                android:visibility="gone"/>
            <Button
                android:id="@+id/ReAddBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="編輯此貼文"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/theAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="貼文作者" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/theAut"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
            <TextView
                android:id="@+id/theClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運動類別" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/theClass"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="貼文內容：" />

        <TextView
            android:id="@+id/theCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="貼文內容" />

        <Button
            android:id="@+id/koreIINe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讚" />

        <Button
            android:id="@+id/toRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看留言" />
    </LinearLayout>

</FrameLayout>
