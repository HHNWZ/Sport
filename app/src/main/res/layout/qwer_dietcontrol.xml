<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical"
    android:clickable="true"
    tools:context="qwer.Dietcontrol">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/angry_btn"

        android:layout_width="190dp"
        android:layout_height="200dp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="常見食物熱量"
        android:textColor="#FFDB29"
        android:textSize="30sp"
        android:layout_above="@+id/angry_bt2"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/angry_bt1"

        android:layout_width="190dp"
        android:layout_height="200dp"

        android:background="@drawable/buttonshape1"
        android:shadowColor="#A8A319"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="熱量計算"
        android:textColor="#FFDB29"
        android:textSize="32sp"
        android:layout_alignTop="@+id/angry_btn"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/angry_bt2"

        android:layout_width="190dp"
        android:layout_height="200dp"

        android:background="@drawable/buttonshape2"
        android:shadowColor="#86A89B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="營養師諮詢"
        android:textColor="#FFDB29"
        android:textSize="32sp"
        android:layout_alignTop="@+id/angry_btn3"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/angry_btn3"

        android:layout_width="190dp"
        android:layout_height="200dp"
        android:background="@drawable/buttonshape3"

        android:shadowColor="#86A89B"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="攝取建議"
        android:textColor="#FFDB29"
        android:textSize="32sp"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
