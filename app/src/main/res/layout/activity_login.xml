<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.LoginActivity"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_email_text_view"
        android:layout_below="@+id/login_toolbar"
        android:text="電郵"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_email_text_view"
        android:id="@+id/login_email_edit_text"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="輸入電郵"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_password_text_view"
        android:layout_below="@+id/login_email_edit_text"
        android:text="密碼"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password_text_view"
        android:background="@drawable/inputs"
        android:id="@+id/login_password_edit_text"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="輸入密碼"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:layout_below="@+id/login_password_edit_text"
        android:text="登錄"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/object_color"
        android:textColor="@color/text_color"/>



</RelativeLayout>
