<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/date_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="1018年8月31日 週日"
        android:textSize="10sp" />

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_text_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_profile_layout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/name_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_profile_layout"
            android:layout_marginLeft="10dp"
            android:text="Display Name"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="left"/>


        <TextView
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_layout"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/message_profile_layout"
            android:text="Message Text"
            android:background="#323d4d"
            android:textColor="#73c4d9"
            android:textSize="20sp"
            android:gravity="left"/>

        <TextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_text_layout"
            android:layout_above="@+id/message_image_layout"
            android:layout_marginLeft="10dp"
            android:text="00:00"
            android:textSize="10sp"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/message_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/message_text_layout"
            android:layout_below="@+id/message_text_layout"
            android:layout_marginLeft="0dp"
            android:layout_toEndOf="@+id/message_profile_layout"
            android:padding="0dp"
            android:scaleType="centerCrop" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_layout">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_message_profile_layout"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/my_name_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/my_message_profile_layout"
            android:layout_marginRight="10dp"
            android:text="Display Name"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/my_message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_name_text_layout"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/my_message_profile_layout"
            android:gravity="right"
            android:text="12345678"
            android:background="#73c4d9"
            android:textColor="#323d4d"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/my_time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/my_message_text_layout"
            android:layout_above="@+id/my_message_image_layout"
            android:layout_marginRight="10dp"
            android:text="00:00"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/my_message_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_message_text_layout"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/my_message_profile_layout"
            android:gravity="right" />


    </RelativeLayout>


</RelativeLayout>
