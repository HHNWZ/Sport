<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.Crunches_task"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/crunches_task_toolbar"
        layout="@layout/app_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/crunches_task_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/crunches_task_half1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <me.tankery.lib.circularseekbar.CircularSeekBar
                    android:id="@+id/crunches_task_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    app:cs_circle_color="@color/text_color"
                    app:cs_circle_progress_color="@color/object_color"
                    app:cs_circle_stroke_width="8dp"
                    app:cs_circle_style="round"
                    app:cs_disable_pointer="true"
                    app:cs_end_angle="430"
                    app:cs_maintain_equal_circle="true"
                    app:cs_start_angle="105" />

                <TextView
                    android:id="@+id/crunches_task_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:text="仰臥起坐"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/crunches_task_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crunches_task_title"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:textColor="@color/text_color"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/crunches_task_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crunches_task_data"
                    android:layout_centerHorizontal="true"
                    android:text="次"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/crunches_susses_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/crunches_task_unit"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="當前完成"
                    android:textColor="@color/text_color" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/my_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/post_border"
                android:orientation="vertical"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/my_crunches_task_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/default_avatar" />

                <TextView
                    android:id="@+id/my_crunches_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的名字"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/my_crunches_task_finish_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="次數"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/my_crunches_task_finish_count_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0"
                    android:textColor="@color/text_color" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/crunches_due1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/post_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/crunches_task_text_and"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AND"
                    android:textColor="@color/text_color"
                    android:textSize="50sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/crunches_task_friend_point"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="你們獲得\n10點\nfriendpoint"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/confirm_crunches_task_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/object_color"
                    android:text="確認"
                    android:textColor="@color/text_color"
                    android:visibility="invisible"
                    android:layout_margin="10dp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/friend_task"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/post_border"
                android:orientation="vertical"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/friend_crunches_task_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/default_avatar"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/friend_crunches_task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="朋友的名字"
                    android:textColor="@color/text_color"
                    android:textSize="20sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/friend_crunches_task_finish_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次數"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/friend_crunches_task_finish_count_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="@color/text_color"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
