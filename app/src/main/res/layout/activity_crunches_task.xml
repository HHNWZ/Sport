<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.Crunches_task">

    <include
        android:id="@+id/crunches_task_toolbar"
        layout="@layout/app_bar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/data_layout"
        android:layout_below="@+id/crunches_task_toolbar"
        android:background="@android:color/holo_red_light">

        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/crunches_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            app:cs_maintain_equal_circle="true"
            app:cs_start_angle="105"
            app:cs_end_angle="430"

            app:cs_circle_style="round"
            app:cs_circle_stroke_width="8dp"
            app:cs_disable_pointer="true" />

        <TextView
            android:id="@+id/exercise_week_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="仰臥起坐"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            tools:textColor="@android:color/black" />

        <TextView
            android:id="@+id/exercise_week_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercise_week_title"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/exercise_week_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exercise_week_data"
            android:layout_centerHorizontal="true"
            android:text="次"
            android:textColor="@android:color/black"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/susses_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exercise_week_unit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="當前完成"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_layout"
        android:layout_below="@+id/data_layout"
        android:background="@android:color/holo_green_light">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_single_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/default_avatar"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/user_single_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_single_image"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/user_single_image"
            android:text="Display Name"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/user_single_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user_single_name"
            android:layout_below="@+id/user_single_name"
            android:layout_marginTop="10dp"
            android:text="今天運動量" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/crunches_task_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_layout"/>

</RelativeLayout>
