<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.MonitoringTool">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/monitoring_tool_app_bar_layout">
        <include android:id="@+id/monitoring_tool_toolbar"
            layout="@layout/app_bar_layout"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/monitoring_tool_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#323d4d"
            app:tabGravity="fill"
            app:tabTextColor="@android:color/white"
            app:tabIndicatorColor="#73c4d9"
            app:tabMode="fixed"
            app:tabSelectedTextColor="#73c4d9"></android.support.design.widget.TabLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/monitoring_tool_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monitoring_tool_app_bar_layout"
        android:background="@color/colorPrimary">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
