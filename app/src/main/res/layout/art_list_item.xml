<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/white" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="top|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text=" 標題"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#323d4d"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/myClassICON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/myCon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/myAut"
            android:text=" 部分內容"
            android:textColor="#73c4d9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/myAut"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/AutImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.2"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/user" />

            <TextView
                android:id="@+id/myAut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/myTitle"
                android:text=" 作者"
                android:textColor="#73c4d9"
                />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4" />
            <ImageView
                android:id="@+id/GoodImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.2"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/like" />
            <TextView
                android:id="@+id/myGoodnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text=" 讚數"

                />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textColor="#73c4d9"
                />
            <ImageView
                android:id="@+id/ResImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.2"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/res" />
            <TextView
                android:id="@+id/myResnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="留言數" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/myResnum"
                android:gravity="center_horizontal"
                android:text=" 則回應"
                android:textColor="#73c4d9"
                />

            <TextView
                android:id="@+id/textView54"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01" />

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.2"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/qazz" />

        </LinearLayout>

        <View
            android:id="@+id/viewq11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/editText6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="#AAAAAA" />
    </LinearLayout>

</RelativeLayout>
