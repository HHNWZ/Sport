<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.TaskProfile"
    android:background="@drawable/userback">

    <include
        android:id="@+id/task_profile_app_bar"
        layout="@layout/app_bar_layout" />

    <ImageView
        android:id="@+id/task_profile_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/task_profile_app_bar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_avatar" />

    <TextView
        android:id="@+id/task_profile_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/task_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Display Name"
        android:textSize="24sp"
        android:textColor="@color/text_color"/>

    <Button
        android:id="@+id/profile_send_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/delete_send_req_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:padding="5dp"
        android:backgroundTint="@color/colorAccent"
        android:text="發送共同任務邀請"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/delete_send_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/colorAccent"
        android:text="拒絕共同任務邀請"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:background="@drawable/button"
        android:padding="5dp"/>

</RelativeLayout>
