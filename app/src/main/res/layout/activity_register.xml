<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.RegisterActivity"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/register_toolbar"
        layout="@layout/app_bar_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_name_text_view"
        android:layout_below="@+id/register_toolbar"
        android:text="姓名"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_name_text_view"
        android:id="@+id/register_name_edit_text"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="輸入姓名"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_email_text_view"
        android:layout_below="@+id/register_name_edit_text"
        android:text="電郵"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_email_text_view"
        android:id="@+id/register_email_edit_text"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="輸入電郵"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_password_text_view"
        android:layout_below="@+id/register_email_edit_text"
        android:text="密碼"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_password_text_view"
        android:background="@drawable/inputs"
        android:id="@+id/register_password_edit_text"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="輸入密碼"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_button"
        android:layout_below="@+id/register_password_edit_text"
        android:text="註冊"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/object_color"
        android:textColor="@color/text_color"/>

    


</RelativeLayout>
