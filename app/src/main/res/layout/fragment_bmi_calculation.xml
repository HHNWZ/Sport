<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.BmiCalculation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/colorPrimary">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bmi_toolbar"
            android:layout_marginStart="34dp"
            android:layout_marginTop="23dp"
            android:text="身高"
            android:textSize="20dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView20"
            android:layout_alignBottom="@+id/textView20"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/textView20"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:hint="請输入..."
            android:inputType="number"
            android:padding="5dip"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignStart="@+id/textView20"
            android:text="體重"
            android:textSize="20dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editText"
            android:layout_below="@+id/editText"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:hint="請输入..."
            android:inputType="number"
            android:padding="5dip"
            android:singleLine="true"
            android:textColorHint="#AAAAAA"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/view"
            android:layout_below="@+id/textView20"
            android:layout_marginEnd="14dp"
            android:background="@drawable/button"
            android:backgroundTint="@color/object_color"
            android:gravity="center"
            android:text="送出"

            android:textColor="@color/text_color"/>

        <View
            android:id="@+id/view"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_below="@+id/editText2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp"
            android:background="@color/object_color" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView21"
            android:layout_below="@+id/view"
            android:layout_marginStart="22dp"
            android:layout_marginTop="39dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="體重過輕"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="體重正常"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="體重過重"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="輕度肥胖"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="中度肥胖"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="重度肥胖"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/text_color"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView15"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/imageView15"
            android:gravity="center"
            android:text="BMI ="
            android:textSize="30dp"
            android:textColor="@color/object_color"/>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView12"
            android:layout_alignStart="@+id/button18"
            android:gravity="center"
            android:text="98.5"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:src="@drawable/qwerbb"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/view"
            android:layout_below="@+id/editText2"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/qwerb1"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageView15"
            android:layout_alignTop="@+id/imageView15"
            android:src="@drawable/qwerb2"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageView16"
            android:layout_alignTop="@+id/imageView15"
            android:src="@drawable/qwerb3"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageView16"
            android:layout_alignTop="@+id/imageView15"
            android:src="@drawable/qwerb4"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageView16"
            android:layout_alignTop="@+id/imageView15"
            android:src="@drawable/qwerb5"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_alignStart="@+id/imageView16"
            android:layout_alignTop="@+id/imageView15"
            android:src="@drawable/qwerb6"
            android:visibility="invisible" />

    </RelativeLayout>

</FrameLayout>
