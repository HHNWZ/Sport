<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kelvin.tablayout.ControlDie"
    android:background="@color/colorPrimary"
    android:id="@+id/content_control_die">

    <include
        android:id="@+id/activity_control_die_toolbar"
        layout="@layout/app_bar_layout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/activity_control_die_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/main_border"
                android:padding="5dp">

                <Button
                    android:id="@+id/common_food_calories_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/food"
                    android:shadowColor="#86A89B"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:textSize="24sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/main_border"
                android:padding="5dp">

                <Button
                    android:id="@+id/monitoring_tool_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/tool"
                    android:shadowColor="#A8A319"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/main_border"
                android:padding="5dp">
                <Button
                    android:id="@+id/go_to_diary_calendar_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/diary"
                    android:shadowColor="#86A89B"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/main_border"
                android:padding="5dp">

                <Button
                    android:id="@+id/ingestion_advice_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/device"
                    android:shadowColor="#86A89B"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    android:textSize="24sp" />

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
