<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="kelvin.tablayout.KelvinAerobicExerciseFragment">

    <!-- TODO: Update blank fragment layout -->

    <lecho.lib.hellocharts.view.ColumnChartView
        android:id="@+id/chart_of_running_today_record"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="113dp" />


    <TextView
        android:id="@+id/text_view_Of_today_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_of_today_record_data"
        android:layout_alignBottom="@+id/text_view_of_today_record_data"
        android:layout_alignStart="@+id/exercise_title"
        android:text="今天記錄:"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/text_view_of_today_record_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_below="@+id/exercise_title"
        android:layout_toRightOf="@+id/text_view_Of_today_record"
        android:layout_marginTop="5px"/>

    <TextView
        android:id="@+id/text_view_of_lowest_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_of_lowest_record_data"
        android:layout_alignBottom="@+id/text_view_of_lowest_record_data"
        android:layout_alignStart="@+id/text_view_Of_today_record"
        android:text="最低記錄:"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/text_view_of_lowest_record_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_below="@+id/text_view_of_today_record_data"
        android:layout_toRightOf="@+id/text_view_of_lowest_record"
        android:layout_marginTop="5px"/>

    <TextView
        android:id="@+id/text_view_of_highest_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_view_of_highest_record_data"
        android:layout_alignBottom="@+id/text_view_of_highest_record_data"
        android:layout_alignStart="@+id/text_view_of_lowest_record"
        android:text="最高記錄:"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/text_view_of_highest_record_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/black"
        android:layout_below="@+id/text_view_of_lowest_record_data"
        android:layout_toRightOf="@+id/text_view_of_highest_record"
        android:layout_marginTop="5px"/>



    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="跑步个人记录"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_below="@+id/chart_of_running_today_record"

         />

    <Button
        android:id="@+id/button_of_invitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="25dp"
        android:text="邀請" />


</RelativeLayout>
