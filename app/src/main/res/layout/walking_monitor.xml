<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="kelvin.tablayout.Walking_monitor">
    <include
        android:id="@+id/walking_monitor_toolBar1"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/walking_monitor_toolBar1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TableLayout
                android:layout_below="@+id/walking_monitor_toolBar1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/distance_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/distance_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="距離:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/distance_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="距離資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="公里"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/duration_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />

                    <TextView
                        android:id="@+id/duration_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="持續時間:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/duration_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="持續時間資料"
                        android:gravity="center" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/start_time_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />

                    <TextView
                        android:id="@+id/start_time_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="開始時間:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/start_time_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="開始時間資料"
                        android:gravity="center" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/end_time_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />

                    <TextView
                        android:id="@+id/end_time_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="结束時間:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/end_time_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="结束時間資料"
                        android:gravity="center" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/mean_HeartRat_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/meanHeartRate_data_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="平均心跳:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/mean_HeartRat_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="平均心跳資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/mean_HeartRat_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="次/分"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/max_heart_rate_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/max_heart_rate_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高心跳:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_heart_rate_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高心跳資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_heart_rate_HeartRat_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="次/分"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/calorie_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/calorie_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="消耗热量:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/calorie_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="消耗热量資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/calorie_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="大卡"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/incline_distance_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/incline_distance_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="總上坡:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/incline_distance_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="總上坡資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/incline_distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="公里"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/decline_distance_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/decline_distance_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="總下坡:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/decline_distance_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="總下坡資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/decline_distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="公里"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/max_altitude_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/max_altitude_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高坡度:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_altitude_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高坡度資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_altitude_distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="米"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/min_altitude_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/min_altitude_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最低坡度:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/min_altitude_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最低坡度資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/min_altitude_distance_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="米"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/mean_speed_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/mean_speed_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="平均速度:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/mean_speed_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="平均速度資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/mean_speed_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="公里/小時"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/max_speed_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/default_avatar" />
                    <TextView
                        android:id="@+id/max_speed_of_walking_monitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高速度:"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_speed_data_of_walking_monitor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="最高速度資料"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/max_speed_unit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="公里/小時"
                        android:gravity="center"
                        android:paddingLeft="5dp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>