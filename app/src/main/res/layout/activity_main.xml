<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a888888888.sport.MainActivity">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#323d4d">

                <include layout="@layout/navigation_actionbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/nav_action"
                    android:id="@+id/main_activity_linear_layout1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/main_border"
                        android:layout_weight="1">




                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/main_title"
                                android:text="運動監控"
                                android:gravity="center"
                                android:textSize="25sp"
                                android:textColor="@android:color/white"
                                android:background="@drawable/over_background"/>

                            <com.nelson.circlelayout.CircleLayout
                                android:id="@+id/circle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                app:radium="100dp"
                                android:gravity="center">
                                <!--步行-->
                                <Button
                                    android:id="@+id/button_of_walking_monitoring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/walk_main" />


                                <!--跑步-->
                                <Button
                                    android:id="@+id/button_of_running_monitoring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/run_main" />

                                <!--瑜伽-->
                                <Button
                                    android:id="@+id/button_of_yoga_monitoring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/yoga_main" />

                                <!--深蹲-->
                                <Button
                                    android:id="@+id/button_of_squats_monitoring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/squat_main" />

                                <!--仰臥起坐-->
                                <Button
                                    android:id="@+id/button_of_crunches_monitoring"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/situp_main" />


                            </com.nelson.circlelayout.CircleLayout>
                        </RelativeLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#323d4d"
                                android:id="@+id/buttonLinear"
                                >

                                <Button
                                    android:id="@+id/button1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/main_border"
                                    android:padding="5dp"
                                    android:drawableTop="@drawable/write1"
                                    android:text="經驗交流"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/button2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/main_border"
                                    android:padding="5dp"
                                    android:drawableTop="@drawable/food1"
                                    android:text="飲食控制"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/main_border"
                                    android:padding="5dp"
                                    android:drawableTop="@drawable/rank1"
                                    android:text="排行榜"
                                    android:textColor="#ffffff" />

                                <Button
                                    android:id="@+id/button3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/main_border"
                                    android:padding="5dp"
                                    android:drawableTop="@drawable/stream1"
                                    android:text="直播"
                                    android:textColor="#ffffff" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/main_border"
                                    android:padding="5dp"
                                    android:layout_weight="1">

                                    <com.github.mikephil.charting.charts.PieChart
                                        android:id="@+id/chart1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_below="@+id/pieChart_toolbar" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:background="@drawable/main_border"

                                    android:layout_weight="1.4">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        android:background="@drawable/main_border"
                                        >
                                        <TextView
                                            android:id="@+id/textView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="跑步:"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_weight="1"/>

                                        <TextView
                                            android:id="@+id/textView6"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="1000公里"
                                            android:gravity="center"
                                            android:textColor="@color/object_color"
                                            android:layout_weight="1"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        android:background="@drawable/main_border"
                                        >

                                        <TextView
                                            android:id="@+id/TextView1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="走路:"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_weight="1"/>

                                        <TextView
                                            android:id="@+id/textView7"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="1000公里"
                                            android:textColor="@color/object_color"
                                            android:gravity="center"
                                            android:layout_weight="1"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        android:background="@drawable/main_border"

                                        >
                                        <TextView
                                            android:id="@+id/textView3"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="瑜伽:"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:layout_weight="1"/>

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="23小时59分59秒"
                                            android:textColor="@color/object_color"
                                            android:layout_marginRight="2dp"
                                            android:gravity="center"
                                            android:layout_weight="1"
                                            android:textSize="11sp"
                                            />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        android:background="@drawable/main_border">
                                        <TextView
                                            android:id="@+id/textView5"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="深蹲:"
                                            android:textColor="#ffffff"
                                            android:layout_weight="1"
                                            android:gravity="center" />

                                        <TextView
                                            android:id="@+id/textView10"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="1000次"
                                            android:textColor="@color/object_color"
                                            android:layout_weight="1"
                                            android:gravity="center"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_weight="1"
                                        android:background="@drawable/main_border">

                                        <TextView
                                            android:id="@+id/textView4"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="仰臥起坐:"
                                            android:textColor="#ffffff"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:layout_gravity="right"
                                            android:layout_weight="1"
                                            />

                                        <TextView
                                            android:id="@+id/textView9"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:text="1000次"
                                            android:textColor="@color/object_color"
                                            android:gravity="center"
                                            android:layout_weight="1"/>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>



                    </RelativeLayout>



                </LinearLayout>







            </RelativeLayout>



    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@drawable/down823"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_navigation"
        android:layout_gravity="start"
        app:itemTextColor="#1e2b3d"
        app:itemIconTint="#1e2b3d">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>