<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a888888888.sport.MainActivity">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#323d4d"

                android:layout_alignParentStart="true"

                >
                <include layout="@layout/navigation_actionbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/buttonLinear"
                    android:layout_below="@+id/nav_action">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/main_title"
                        android:text="運動監控"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:textColor="@android:color/white"/>


                    <com.nelson.circlelayout.CircleLayout
                        android:id="@+id/circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        app:radium="100dp"
                        >
                        <!--步行-->
                       <Button
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@drawable/walkingbackground"
                           android:id="@+id/button_of_walking_monitoring"/>


                        <!--跑步-->
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/runningbackground"
                            android:id="@+id/button_of_running_monitoring"/>

                        <!--瑜伽-->
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/yogabackground"
                            android:id="@+id/button_of_yoga_monitoring"/>

                        <!--深蹲-->
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/suagatsbackground"
                            android:id="@+id/button_of_squats_monitoring"/>

                        <!--仰臥起坐-->
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/crunchesbackground"
                            android:id="@+id/button_of_crunches_monitoring"/>




                    </com.nelson.circlelayout.CircleLayout>

                </RelativeLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#323d4d"

                    android:id="@+id/buttonLinear"
                    android:layout_above="@+id/dataLinear1">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#323d4d"
                        android:drawableTop="@drawable/write1"
                        android:text="經驗交流"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#323d4d"
                        android:drawableTop="@drawable/food1"
                        android:text="飲食控制"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#323d4d"
                        android:drawableTop="@drawable/rank1"
                        android:text="排行榜"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#323d4d"
                        android:drawableTop="@drawable/stream1"
                        android:text="直播"
                        android:textColor="#ffffff" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@id/buttonLinear"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/dataLinear1"
                    >

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/pieChart_toolbar" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dataLinear1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#38b048"
                            >
                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="跑步:"
                                android:textColor="#ffffff"
                                android:paddingRight="2.5dp"
                                android:layout_gravity="right"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="10000公里"
                                android:textColor="#ffffff"
                                android:gravity="center_vertical"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#189428">
                            <TextView
                                android:id="@+id/TextView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="走路:"
                                android:textColor="#ffffff"
                                android:paddingRight="2.5dp"
                                android:layout_gravity="right"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="1000公里"
                                android:textColor="#ffffff"
                                android:gravity="center_vertical"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#349bb3">
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="瑜伽:"
                                android:textColor="#ffffff"
                                android:paddingRight="2.5dp"
                                android:layout_gravity="right"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="23小时59分"
                                android:textColor="#ffffff"
                                android:gravity="center_vertical"
                                android:paddingRight="5dp"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#2671ab">
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="深蹲:"
                                android:textColor="#ffffff"
                                android:paddingRight="2.5dp"
                                android:layout_gravity="right"
                                android:gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="1000次"
                                android:textColor="#ffffff"
                                android:gravity="center_vertical"/>
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#2c618a">
                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="仰臥起坐:"
                                android:textColor="#ffffff"
                                android:paddingRight="2.5dp"
                                android:layout_gravity="right"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"/>

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="1000次"
                                android:textColor="#ffffff"
                                android:gravity="center_vertical"/>
                        </TableRow>

                    </TableLayout>

                </LinearLayout>



                <!--更新-->




            </RelativeLayout>



    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        >

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/menu_navigation"
        android:layout_gravity="start">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>